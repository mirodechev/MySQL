1)SELECT `title` FROM `books` WHERE SUBSTRING(title,1,3) = 'The' ORDER BY `id`;
2)SELECT REPLACE(`title`,'The','***')FROM `books` ORDER BY `id`;
3)SELECT FORMAT ((SUM(`cost`)),'N') AS `sum` FROM `books`;
4)SELECT concat(`first_name`, ' ',`last_name`) AS `Full Name`,
TIMESTAMPDIFF(DAY,`born`,`died`) as `Days Lived` FROM `authors`;
